<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_recipe_text"
        android:hint="@string/new_step"
        android:layout_margin="8dp"
        app:layout_constraintRight_toLeftOf="@+id/timer_container"
        app:layout_constraintWidth_default="wrap"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_container"
        app:layout_constraintLeft_toRightOf="@id/edit_recipe_text"
        app:layout_constraintRight_toLeftOf="@+id/add_step"
        app:layout_constraintBottom_toBottomOf="@id/edit_recipe_text"
        app:layout_constraintTop_toTopOf="@id/edit_recipe_text"
        android:layout_margin="8dp"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/timer"
            android:id="@+id/timer_prompt"
            android:layout_margin="8dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_button"
            android:layout_toEndOf="@id/timer_prompt"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_value"
            android:hint="@string/enter_time"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_step"
        android:text="@string/add_button"
        app:layout_constraintTop_toTopOf="@id/timer_container"
        app:layout_constraintBottom_toBottomOf="@id/timer_container"
        app:layout_constraintLeft_toRightOf="@id/timer_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

</android.support.constraint.ConstraintLayout>